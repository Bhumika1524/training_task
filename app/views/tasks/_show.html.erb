<head>
  <style>
      td, th {
          padding: 20px;
          width: 30vw;
      }
  </style>
</head>
<table>
  <thead>
  <tr>
    <th>Comment</th>
    <th>Name</th>
    <th>FromUser</th>
    <th>Option</th>
  </tr>
  </thead>
  <tbody>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.name %></td>
      <td><%= @task.name %></td>
      <td><%= comment.user.username %></td>
      <% if comment.user_id == current_user.id %>
        <td><%= link_to "Edit Comment", edit_task_comment_path(@task.id, comment.id) %></td>
      <% else %>
        <td><%= link_to "Show Comment", task_comment_path(@task.id, comment.id) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>